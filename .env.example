# =============================
# Plex Server Configuration
# =============================
ENABLE_PLEX=true
PLEX_URL=http://plex:32400
PLEX_TOKEN=PLEX_TOKEN

# Comma-separated list of movie library sections (e.g., "Movies, Movies - 4K")
LIBRARY_SECTION_MOVIES=Movies, Movies - 4K
# Comma-separated list of TV show library sections (e.g., "TV, TV - 4K")
LIBRARY_SECTION_SHOWS=TV, TV - 4K

# =============================
# Jellyfin Server Configuration
# =============================
ENABLE_JELLYFIN=false
JELLYFIN_URL=http://jellyfin:8096
JELLYFIN_API_KEY=JELLYFIN_API_KEY
# Comma-separated list of movie library names in Jellyfin
JELLYFIN_LIBRARY_MOVIES=Movies, Movies - 4K
# Comma-separated list of TV show library names in Jellyfin
JELLYFIN_LIBRARY_SHOWS=TV, TV - 4K

# =============================
# Radarr Configuration (Movies)
# =============================
RADARR_URL=http://radarr:7878
RADARR_API_KEY=RADARR_API_KEY
RADARR_QUALITY_PROFILE_ID=7
RADARR_ROOT_FOLDER=/mnt/plex/Movies

# =============================
# Sonarr Configuration (TV Shows)
# =============================
SONARR_URL=http://sonarr:8989
SONARR_API_KEY=SONARR_API_KEY
SONARR_QUALITY_PROFILE_ID=8
SONARR_ROOT_FOLDER=/mnt/plex/TV

# =============================
# Script Options
# =============================
# Set to true to search for missing titles in Radarr/Sonarr
SEARCH_MISSING=true